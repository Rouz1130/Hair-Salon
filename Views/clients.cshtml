@if (@Model.Count == 0)
{
  <p>No clients</p>
}
else
{
  <h1>List of all your clients</h1>
  <ul>
    @foreach (var client in Model)
    {
      <li>@client.GetName()</li>
    }
  </ul>
  <form action="/clients/delete" method="post">
    <button type="submit">Clear all clients</button>
  </form>
}
<p><a href="/clients/new">Add Client</a></p>
<p><a href="/">Home</a></p>
